{
    "name": "Anywhere TODO",
    "version": "0.3",
    "description": "Simple TODO List for Chrome. Access it from anywhere",
    "manifest_version": 2,
    "chrome_url_overrides": {
        "newtab": "todo.html"
    },
    "background": {
        "scripts": ["background.js"]
    },
    "permissions": [ "storage"],
    "omnibox": { "keyword" : ":todo" },
    "icons": {
        "16": "images/todo16.png",
        "32": "images/todo32.png",
        "48": "images/todo48.png",
        "128": "images/todo128.png"
    }
}